% Maxbox: Ensure #3 is no wider than #1 and taller than #2
\providecommand{\maxbox}[3]{%
  \setbox9=\hbox{{#3}}%
  \ifdim\wd9>#1
    \setbox9=\hbox{\resizebox{#1}{!}{#3}}%
  \else
    {}%
  \fi%
  \ifdim\ht9>#2
    \setbox9=\hbox{\resizebox{!}{#2}{\usebox9}}%
  \else
    {}%
  \fi%
  \usebox9
}

